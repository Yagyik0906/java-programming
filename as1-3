import java.io.*;
class rev
{
public static void main(String args[])throws IOException
{
BufferedReader br= new BufferedReader (new InputStreamReader(System.in));
String s;
System.out.println("Enter the string to be operated on :");
s=br.readLine();
String w="";
for(int i=0;i<s.length();i++)
{
char ch=s.charAt(i);
w=ch+w;
}
System.out.println("The reversed string is : "+w);
String c="";
for(int i=0;i<s.length();i++)
{
char ch=w.charAt(i);
if(ch=='t'||ch=='T')
c=c+'L';
else
c=c+ch;
}
System.out.println("The manipukated string is :"+c);
}
}
