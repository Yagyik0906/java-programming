import java.util.Scanner;
class cosine
{
public void main()
{
Scanner sc=new Scanner(System.in);
System.out.println("Enter the number of terms to be sumed and the angle to be used");
int n=sc.nextInt();
double a=sc.nextDouble();
double sum=0.0; 
for(int i=0;i<=n-1;i++)
{
int fact=1;
for(int j=0;j<=i*2;j++)
fact=fact*j;
if (fact==0)
fact=1;
sum=sum+(Math.pow(a,i*2)/fact);
}
System.out.println("The sum of the cosine series is : "+sum);
}
}
